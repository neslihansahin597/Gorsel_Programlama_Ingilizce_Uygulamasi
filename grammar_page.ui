    /* Arka plan: Çok hafif ve temiz bir gri-mavi */
    background-color: #F8FAFF; 
    
    /* Yazı rengi: Siyah yerine orta tonlu bir indigo/mavi */
    color: #6366F1; 
    
    /* Kenarlık: İnce ve yumuşak bir hat */
    border: 1px solid #E2E8F0;
    
    border-radius: 10px;
    padding: 8px 16px;
    font-family: &quot;Segoe UI&quot;, sans-serif;
    font-size: 13px;
    font-weight: 600;
}

/* Fare üzerine geldiğinde (Hover) */
QPushButton#btn_back:hover {
    /* Hafif bir dolgu ve yazı renginde canlanma */
    background-color: #EEF2FF;
    color: #4F46E5;
    border: 1px solid #C7D2FE;
}

/* Tıklandığında (Basılma efekti) */
QPushButton#btn_back:pressed {
    background-color: #E0E7FF;
    /* Hafif içeri çökme hissi */
    padding-top: 10px;
    padding-bottom: 6px;
}</string>
