      <property name="styleSheet">
       <string notr="true">/* Dil Bilgisi Konu Listesi - list_grammar_topics */
QListWidget#list_grammar_topics {
    background-color: #FFFFFF;
    border: 1px solid #E2E8F0;
    border-radius: 12px;
    color: #334155;
    font-family: &quot;Segoe UI&quot;, sans-serif;
    font-size: 14px;
    outline: none;
    padding: 5px;
}

/* Listedeki maddeler */
QListWidget#list_grammar_topics::item {
    padding: 12px;
    border-radius: 8px;
    margin-bottom: 4px;
    border-bottom: 1px solid #F1F5F9;
}

QListWidget#list_grammar_topics::item:hover {
    background-color: #F8FAFF;
    color: #6366F1;
}

QListWidget#list_grammar_topics::item:selected {
    background-color: #EEF2FF;
    color: #4F46E5;
    font-weight: bold;
    border: none;
}

/* --- SCROLLBAR (KAYDIRMA ÇUBUĞU) TASARIMI --- */

/* Dikey Kaydırma Çubuğu Kanalı */
QListWidget#list_grammar_topics QScrollBar:vertical {
    border: none;
    background: #F8FAFF; /* Kanal arka planı */
    width: 8px;          /* İnce ve zarif genişlik */
    margin: 0px;
    border-radius: 4px;
}

/* Kaydırma Çubuğunun Tutacağı */
QListWidget#list_grammar_topics QScrollBar::handle:vertical {
    background: #CBD5E1; /* Soft gri renk */
    min-height: 20px;
    border-radius: 4px;
}

/* Tutacağın üzerine gelindiğinde */
QListWidget#list_grammar_topics QScrollBar::handle:vertical:hover {
    background: #94A3B8; /* Biraz daha koyu gri */
}

/* Alt ve Üst Ok Butonlarını Gizle */
QListWidget#list_grammar_topics QScrollBar::add-line:vertical, 
QListWidget#list_grammar_topics QScrollBar::sub-line:vertical {
    height: 0px;
    background: none;
}

/* Kanalın üst ve alt boşlukları */
QListWidget#list_grammar_topics QScrollBar::add-page:vertical, 
QListWidget#list_grammar_topics QScrollBar::sub-page:vertical {
    background: none;
}</string>
